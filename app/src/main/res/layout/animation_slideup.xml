<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slideup_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tutorial_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/arrow_kylie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slide Up to Close"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tutorial_arrow"
        app:layout_constraintStart_toStartOf="@+id/tutorial_arrow"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>