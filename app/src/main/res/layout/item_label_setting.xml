<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_label"
        style="@style/standard_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Label"
        android:textAllCaps="true"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刪除"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_label"
        app:layout_constraintEnd_toEndOf="@+id/text_label"
        app:layout_constraintTop_toTopOf="@+id/text_label" />

    <TextView
        android:id="@+id/text_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編輯"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/large_margin"
        app:layout_constraintBottom_toBottomOf="@+id/text_label"
        app:layout_constraintEnd_toStartOf="@+id/text_delete"
        app:layout_constraintTop_toTopOf="@+id/text_label" />


</androidx.constraintlayout.widget.ConstraintLayout>